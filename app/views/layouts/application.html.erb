<!DOCTYPE html>
<html>
  <head>
    <title>CeibaTeam</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row" id="header">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 bordered">
          CEIBA-TEAM
        </div>
        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 bordered">
          <ul class="menu">
            <li>
              <%= link_to "#" do %>
                <p>Inicio</p>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <p>Nosotros</p>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <p>Servicios</p>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <p>Novedades</p>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <p>Contacto</p>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

      <div class="row" id="content">
        <%= yield %>
      </div>

      <div class="row" id="footer">

      </div>
    </div>
  </body>
</html>
